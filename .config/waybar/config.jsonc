{
    "layer": "top",
    "position": "top",
    "height": 30,
    "spacing": 12,
    "margin-top": 12,
    "margin-left": 12,
    "margin-right": 12,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window",
    ],
    "modules-center": [
    ],
    "modules-right": [
        "custom/agenda",
        "pulseaudio",
        "bluetooth",
        "custom/mako",
        "custom/ufw",
        "custom/vpn",
        "network",
        "power-profiles-daemon",
        "battery",
    	"clock"
    ],
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "clock": {
        "interval": 1,
        "tooltip-format": "{:%A | %Y-%m-%d | %H:%M:%S}\n<tt><small>{calendar}</small></tt>",
        "format": "{:%d %b · %H:%M}"
    },
    "cpu": {
        "format": " {usage}%",
        "tooltip": false
    },
    "memory": {
        "format": "{}% "
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{icon} {temperatureC}°C",
        "format-icons": ["", "", ""]
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{icon} {percent}%",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "battery": {
        "states": {
            "full": 100,
            "good": 80,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-icons": ["󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
        "format-charging": "󰂄 {capacity}%",
        "format-plugged": "󰂄 {capacity}%"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "",
        "performance": "",
        "balanced": "",
        "power-saver": ""
      }
    },
    "bluetooth": {
      "on-click": "$HOME/.scripts/bluetooth_toggle.sh",
      "format": "{icon}",
      "format-icons": {
          "on": "󰂯",
          "off": "󰂲"
      },
      "format-connected": " {device_alias}",
      "format-connected-battery": " {device_alias} {device_battery_percentage}%",
      // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
      "tooltip-format": "Status:\t\t{status}\nAlias:\t\t{controller_alias}\nAddress:\t{controller_address}\n\n{num_connections} connected",
      "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
      "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
      "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },
    "network": {
      "format-wifi": "{icon}",
      "format-wifi-disabled": "wifi off",
      "format-wifi-disconnected": "{icon} wifi disconnected",

      "format-ethernet": "  {ipaddr}/{cidr} ↑{bandwidthUpOctets} ↓{bandwidthDownOctets}",
      "format-ethernet-disabled": "{icon} ethernet off",
      "format-ethernet-disconnected": "ethernet disconnected",
      
      "tooltip-format": "🌐 Gränssnitt: {ifname}\n📍 IP-adress: {ipaddr}/{cidr}\n🚪 Gateway: {gwaddr}\n📊 Bandbredd: ↑{bandwidthUpBits} ↓{bandwidthDownBits}",
      "tooltip-format-wifi": "Network:\t{essid}\nStrength:\t{signalStrength}% ({signaldBm} dBm)\nFrequency:\t{frequency} MHz\nBSSID:\t\t{bssid}\nIP:\t\t{ipaddr}/{cidr}\nGateway:\t{gwaddr}\nBandwidth:\t↑{bandwidthUpBits} ↓{bandwidthDownBits}",
      "tooltip-format-ethernet": "🔌 Ethernet: {ifname}\n📍 IP-adress: {ipaddr}/{cidr}\n🚪 Gateway: {gwaddr}\n🎭 Nätmask: {netmask}\n📊 Hastighet: ↑{bandwidthUpBits} ↓{bandwidthDownBits}\n🔗 Länkhastighet: Aktiv",
      "tooltip-format-disconnected": "❌ Ingen nätverksanslutning tillgänglig",

      "format-icons": {
        "wifi": [
            "󰤯",  // 0-20% - Mycket svag signal
            "󰤟",  // 21-40% - Svag signal  
            "󰤢",  // 41-60% - Medel signal
            "󰤥",  // 61-80% - Stark signal
            "󰤨"   // 81-100% - Mycket stark signal
        ],
        "ethernet": "󰈁",        // Fast ethernet-ikon
        "disconnected": "󰤮"     // Frånkopplad-ikon
    },
    },
    "pulseaudio": {
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{icon} {volume}% {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": " {volume}%",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
    "custom/agenda": {
        "exec": "~/.config/waybar/gcal-agenda.sh",
        "interval": 300,
        "return-type": "json",
        "max-length": 50,
    },
    "custom/vpn": {
        "exec": "~/.config/waybar/wireguard-status.sh",
        "return-type": "json",
        "format": "{}",
        "signal": 7,
        "interval": 60 // backup sync status every min
    },
    "custom/ufw": {
        "exec": "~/.config/waybar/ufw-status.sh",
        "return-type": "json",
        "format": "{}",
        "interval": 60
    },
    "custom/mako": {
        "exec": "$HOME/.config/waybar/mako-mode.sh",
        "on-click": "$HOME/.scripts/mako_toggle_do_not_disturb.sh",
        "return-type": "json",
        "format": "{}",
        "signal": 8,
        "interval": 60 // backup sync status every min
    }
}
