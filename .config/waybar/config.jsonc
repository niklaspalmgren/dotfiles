    },
    "custom/mako": {
        "exec": "$HOME/.config/waybar/mako-mode.sh",
        "on-click": "$HOME/.scripts/mako_toggle_do_not_disturb.sh",
        "return-type": "json",
        "format": "{}",
        "signal": 8,
        "interval": 60 // backup sync status every min
    },
    "custom/whisper": {
        "exec": "whisper-waybar",
        "return-type": "json",
        "format": "{}"
    },
    "custom/fullscreen": {
        "exec": "$HOME/.config/waybar/hyprland-fullscreen-indicator.sh",
        "return-type": "json",
        "format": "{}",
