    "custom/vpn": {
        "exec": "~/.config/waybar/wireguard-status.sh",
        "return-type": "json",
        "format": "{}",
        "signal": 7,
        "interval": 60 // backup sync status every min
    },
    "custom/ufw": {
        "exec": "~/.config/waybar/ufw-status.sh",
        "return-type": "json",
